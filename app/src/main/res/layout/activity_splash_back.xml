<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_back_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashBackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

        <yanzhikai.textpath.SyncTextPathView
            android:id="@+id/baslik_first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:duration="5000"
            app:paintStrokeColor="@color/Black"
            app:pathStrokeColor="@color/Black"
            app:showPainter="true"
            app:text="SENİOR DEVELOPER"
            app:textInCenter="true"

            />

        <yanzhikai.textpath.SyncTextPathView
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:duration="5000"
            app:paintStrokeColor="@color/Basket_Ball_Orange"
            app:pathStrokeColor="@color/Basket_Ball_Orange"
            app:showPainter="true"
            app:text="SAİD"
            app:textInCenter="true"

            />

        <yanzhikai.textpath.SyncTextPathView
            android:id="@+id/second_baslik"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:duration="5000"
            app:paintStrokeColor="@color/Purple"
            app:pathStrokeColor="@color/Purple"
            app:showPainter="true"
            app:text="KAYGISIZ"
            app:textInCenter="true" />

    </LinearLayout>


    <com.varunest.loader.TheGlowingLoader
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="@color/Gray_Goose"
        app:theglowingloader_line_1_color="@color/Purple"
        app:theglowingloader_line_2_color="@color/Basket_Ball_Orange"
        app:theglowingloader_line_stroke_width="36"
        app:theglowingloader_ripple_color="@color/BlackGhost" />

</RelativeLayout>